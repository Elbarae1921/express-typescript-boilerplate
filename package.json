{
   "name": "typescript-express-boilerplater",
   "version": "0.0.1",
   "description": "Boilerplate for an API made using express, typescript and typeorm",
   "license": "MIT",
   "devDependencies": {
      "@types/bcrypt": "^3.0.0",
      "@types/compression": "^1.7.0",
      "@types/express": "^4.17.7",
      "@types/express-fileupload": "^1.1.4",
      "@types/faker": "^5.5.8",
      "@types/formidable": "^1.0.31",
      "@types/helmet": "0.0.48",
      "@types/jsonwebtoken": "^8.5.0",
      "@types/morgan": "^1.9.1",
      "@types/node": "^14.6.0",
      "nodemon": "^2.0.13",
      "ts-node": "8.10.2",
      "typescript": "3.9.7"
   },
   "dependencies": {
      "bcrypt": "^5.0.0",
      "class-transformer": "^0.3.1",
      "class-validator": "^0.12.2",
      "compression": "^1.7.4",
      "express": "^4.17.1",
      "express-fileupload": "^1.2.0",
      "faker": "^5.5.3",
      "formidable": "^1.2.2",
      "helmet": "^4.1.0",
      "jsonwebtoken": "^8.5.1",
      "morgan": "^1.10.0",
      "pg": "^8.3.2",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.25"
   },
   "scripts": {
      "start": "ts-node src/server.ts",
      "start:dev": "nodemon src/server.ts",
      "build": "tsc",
      "start:prod": "node dist/server.js",
      "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
      "migration:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
      "migration:up:prod": "typeorm migration:run",
      "migration:down": "ts-node ./node_modules/typeorm/cli.js migration:revert",
      "migration:down:prod": "typeorm migration:revert",
      "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
      "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
      "seed": "ts-node src/seeds/index.ts",
      "seed:prod": "node dist/seeds/index.js",
      "docker:compose": "docker-compose up -d --build",
      "docker:logs": "docker logs app",
      "docker:logs:follow": "docker logs --tail 20 app --follow",
      "docker:yarn": "docker exec -t app yarn",
      "docker:migration:up": "docker exec -t app yarn migration:up:prod",
      "docker:migration:down": "docker exec -t app yarn migration:down:prod",
      "docker:seed": "docker exec -t app yarn seed:prod",
      "docker:restart": "docker-compose restart",
      "docker:exec": "docker exec -it app sh",
      "docker:up": "docker-compose up -d",
      "docker:stop": "docker-compose stop",
      "docker:down": "docker-compose down",
      "docker:db": "docker-compose --file db.compose.yml up -d"
   }
}
